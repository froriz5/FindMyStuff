<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Incident</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.category %></td>
    <td><%= item.incident_id %></td>
    <td><%= item.status %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

