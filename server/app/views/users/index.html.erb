<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Location</th>
    <th>Datejoined</th>
    <th>Loginattempts</th>
    <th>Locked</th>
    <th>Admin</th>
    <th>Emailaddress</th>
    <th>Phonenumber</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.location_id %></td>
    <td><%= user.dateJoined %></td>
    <td><%= user.loginAttempts %></td>
    <td><%= user.locked %></td>
    <td><%= user.admin %></td>
    <td><%= user.emailAddress %></td>
    <td><%= user.phoneNumber %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

